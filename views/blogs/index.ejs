<% include ../partials/header %>

<div class="container">
<header class="jumbotron">
    <div class="container">
        <h1>WELCOME TO RILEYS BLOG BITCH!</h1>
        <p>View my reviews!</p>
        <p>
            <% if(currentUser.username) { %>
                <a class="btn btn-primary btn-lg" href="/blogs/new">ADD NEW BLOG!</a>
            <% }; %>
        </p>
    </div>    
</header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% blogs.forEach(function(blogs){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= blogs.image %>">
                    <div class="caption"> 
                        <h4><%= blogs.title %></h4>
                    </div>
                    <p>
                        <a href="/blogs/<%= blogs._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>

