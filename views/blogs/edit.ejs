<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Update blog!</h1>
        <div style="width: 60%; margin: 50px auto">
            <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input class="form-control" type="text" name="title" value="<%= blog.title %>">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>                
                    <input class="form-control" type="text" name="image" value="<%= blog.image %>">
                </div>
                <div class="form-group">
                    <label for="content">Content</label>
                    <input class="form-control" type="text" name="body" value="<%= blog.body %>">
                </div>
                <div class="form-group">                
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
            </form>
        </div>    
    </div>
</div>

<% include ../partials/footer %>